<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittextbg</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:drawablePadding">20dp</item>

    </style>

    <style name="edittext.username">
        <item name="android:hint">Username</item>
        <item name="android:drawableLeft">@drawable/ic_person_black_24dp</item>


    </style>

    <style name="edittext.email">
        <item name="android:hint">Email</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:drawableLeft">@drawable/ic_email_black_24dp</item>

    </style>

    <style name="edittext.password">
        <item name="android:hint">@string/Password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:drawableLeft">@drawable/ic_lock_black_24dp</item>

    </style>









  <!--  <style name="edittext.age">
        <item name="android:hint">@string/Age</item>
        <item name="android:inputType">number</item>
        <item name="android:drawableLeft">@drawable/ic_wc_black_24dp</item>

    </style>-->


    <style name="btnstyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/button_bg</item>

    </style>

    <style name="btnstyle.register">
        <item name="android:text">@string/Register</item>


    </style>

    <style name="btnstyle.login">
        <item name="android:text">@string/Login</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <string name="Age">Age</string>
</resources>
