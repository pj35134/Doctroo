<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_authentication"
    tools:context=".MainActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/loghin_textview"
    android:text="Login"
    android:textSize="60dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:fontFamily="@font/birds"
    android:textColor="@color/white"
    android:layout_marginVertical="40sp"/>

       <EditText
           style="@style/edittext.email"
           android:id="@+id/login_email"
          />

       <EditText
           style="@style/edittext.password"
           android:id="@+id/login_password"
           />
    <CheckBox
        android:id="@+id/rememberme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:text="Remember me"
        />

    <Button
        style="@style/btnstyle"
        android:text="@string/Login"
        android:id="@+id/login"/>
   <!-- <Button
        style="@style/btnstyle"
        android:text="@string/Register"
        android:id="@+id/register"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotpassword"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:text="Forgotpassword"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:visibility="gone"/>







</LinearLayout>