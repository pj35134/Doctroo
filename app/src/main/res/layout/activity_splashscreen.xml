<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".Splashscreen">


    <ImageView
        android:layout_width="@dimen/width_doctro_img"
        android:layout_height="@dimen/height_doctro_img"
        android:id="@+id/doctro_logo"
        android:layout_above="@id/doctro_text"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        android:src="@mipmap/logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Doctro"
        android:textSize="40sp"
        android:fontFamily="@font/federalservicebold"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginVertical="40dp"
        android:layout_centerInParent="true"
        android:id="@+id/doctro_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/motto"
        android:text="@string/motto"
        android:layout_centerInParent="true"
        android:fontFamily="@font/birds"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
      android:layout_marginBottom="10dp"
        android:textColor="@color/grey"
        android:gravity="center"

        />





</RelativeLayout>